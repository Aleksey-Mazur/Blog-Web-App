<%- include("partials/header"); %>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-2">
    <label for="titleInput" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      name="postTitle"
      id="titleInput"
      autocomplete="off"
    />
  </div>
  <div class="mb-3">
    <label for="postInput" class="form-label">Post</label>
    <textarea
      name="postBody"
      class="form-control"
      id="postInput"
      rows="5"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer"); %>
